<style type="text/css">
    .form-error {
        color: red;
        font-weight: bold;
        padding-bottom:10px;
    }
    .form-error ul {
        margin:0;
    }
</style>

{# Etape 2 #}
<div class="card step_2">
    <div class="card-content">
        <span class="card-title color_product_primary center-align">Étape 2</span>
        <p class="h6 center-align">Remplissez ce formulaire</p>
        <div class="form-wrapper">
            <div class="input-field">
                {{ form_widget(form.lastName) }}
                {{ form_label(form.lastName) }}
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                
                {{ form_widget(form.firstName) }}
                {{ form_label(form.firstName) }}
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                
                {{ form_widget(form.adress) }}
                {{ form_label(form.adress) }}
                <div class="form-error"></div>
            </div>
            <div class="input-field">
               
                {{ form_widget(form.adressSup) }}
                {{ form_label(form.adressSup) }}
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                
                {{ form_widget(form.city) }}
                {{ form_label(form.city) }}
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                
                {{ form_widget(form.cp) }}
                {{ form_label(form.cp) }}
                <div class="form-error"></div>
            </div>
            <div class="input-field">          
                {{ form_widget(form.country) }}
                {{ form_label(form.country) }}
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                
                
                {{ form_widget(form.phone) }}
                {{ form_label(form.phone) }}
                <div class="form-error"></div>
            </div>
            <div class="input-field">

                {{ form_widget(form.email) }}
                {{ form_label(form.email) }}
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                <input type="text">
                <label>Confirmation email</label>
                <div class="form-error"></div>
            </div>
        </div>
    </div>
    <ul class="collapsible">
        <li>
            <div class="collapsible-header"><i class="material-icons">markunread_mailbox</i>Adresse de livraison différente ?</div>
            <div class="collapsible-body">
                <div class="input-field">
                    
                    {{form_widget(form.deliveryLocations.firstName)}}
                    {{ form_label(form.deliveryLocations.firstName) }}
                    <div class="form-error"></div>
                </div>
                <div class="input-field">
                    
                    {{form_widget(form.deliveryLocations.lastName)}}
                    {{ form_label(form.deliveryLocations.lastName) }}
                    <div class="form-error"></div>
                </div>
                <div class="input-field">
                {{ form_widget(form.deliveryLocations.adress) }}
                {{ form_label(form.deliveryLocations.adress) }}
                    <div class="form-error"></div>
                </div>
                <div class="input-field">
                {{ form_widget(form.deliveryLocations.adressSup) }}
                {{ form_label(form.deliveryLocations.adressSup) }}
                    <div class="form-error"></div>
                </div>
                <div class="input-field">
                {{ form_widget(form.deliveryLocations.city) }}
                {{ form_label(form.deliveryLocations.city) }}
                    <div class="form-error"></div>
                </div>
                <div class="input-field">
                {{ form_widget(form.deliveryLocations.cp) }}
                {{ form_label(form.deliveryLocations.cp) }}
                    <div class="form-error"></div>
                </div>
                <div class="input-field">
                    {{ form_widget(form.deliveryLocations.country) }}
                    {{ form_label(form.deliveryLocations.country) }}
                    <div class="form-error"></div>
                </div>
                <div class="input-field">
                {{ form_widget(form.deliveryLocations.phone) }}
                {{ form_label(form.deliveryLocations.phone) }}
                    <div class="form-error"></div>
                </div>
            </div>
        </li>
    </ul>
</div>
{# Etape 3 #}
<div class="card step_3">
    <div class="card-content">
        <span class="card-title color_product_primary center-align">Étape 3</span>
        <p class="h6 center-align">Choisissez un paiement</p>
        <ul class="collapsible">
            <li class="active">
                <div class="collapsible-header"><i class="fas fa-credit-card"></i>Payer avec la Carte Bancaire</div>
                <div class="collapsible-body card-form">
                    <div class="row">
                        <div class="center-align">
                            <button type="submit" name="order[payment_method]" value="stripe" class="btn-large btn-block waves-effect waves-light">Continuer</button>
                            <p>J'accepte les <a href="https://feelwellshop.com/fr/conditions-generales-de-ventes" target="_blank">conditions générales de vente</a></p>
                            <img class="responsive-img monetico" src="assets/images/paiement-securise-stripe.jpeg" alt="Stripe protège vos achats">
                        </div>
                    </div>
                </div>
            </li>
            <li>
                <div class="collapsible-header"><i class="fab fa-cc-paypal"></i>Payer avec Paypal</div>
                <div class="collapsible-body">
                    <div class="row">
                        <div class="center-align">
                            <button type="submit" name="order[payment_method]" value="paypal" class="btn-large btn-block waves-effect waves-light">Continuer sur PayPal</button>
                            <p>J'accepte les <a href="https://feelwellshop.com/fr/conditions-generales-de-ventes" target="_blank">conditions générales de vente</a></p>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</div>