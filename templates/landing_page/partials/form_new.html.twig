            </div>
            <div class="input-field">
                <input type="text">
                <label>Ville</label>
                {{ form_widget(Commandecity) }}
                {{ form_label(Commande.city) }}
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                <input type="text">
                <label>Code postal</label>
                {{ form_widget(Commande.cp) }}
                {{ form_label(Commande.cp) }}
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                <select>
                    <option>France</option>
                </select>
                <label>Pays</label>
                {{ form_widget(Commande.country) }}
                {{ form_label(Commande.country) }}
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                <input type="text">
                <label>Téléphone</label>
                {{ form_widget(Commande.phone) }}
                {{ form_label(Commande.phone) }}
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                <input type="text">
                <label>Email</label>
                {{ form_widget(Commande.email) }}
                {{ form_label(Commande.email) }}
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                <input type="text">
                <label>Confirmation email</label>
                {{ form_widget(Commande.adressSup) }}
                {{ form_label(Commande.adressSup) }}
                <div class="form-error"></div>
            </div>
        </div>
    </div>
    {{ form_end(CommandeType) }}
