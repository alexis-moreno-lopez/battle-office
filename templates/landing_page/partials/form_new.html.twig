        <span class="card-title color_product_primary center-align">Étape 2</span>
        <p class="h6 center-align">Remplissez ce formulaire</p>
        <div class="form-wrapper">
            <div class="input-field">
                <input type="text">
                <label>Prénom</label>
                {{ form_widget(Commande.lastName) }}
                {{ form_label(Commande.lastName) }}
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                <input type="text">
                <label>Nom</label>
                {{ form_widget(Commande.firstName) }}
                {{ form_label(Commande.firstName) }}
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                <input type="text">
                <label>Adresse</label>
                {{ form_widget(Commande.adress) }}
                {{ form_label(Commande.adress) }}
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                <input type="text">
                <label>Complément adr.</label>
                {{ form_widget(Commande.adressSup) }}
                {{ form_label(Commande.adressSup) }}
